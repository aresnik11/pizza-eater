<h1>Create a New Custom Pizza</h1>

<% if flash[:messages] %>
    <h3><%= flash[:messages] %></h3>
<% end %>

<%= form_for @pizza do |f| %>
    Name:
    <%= f.text_field :name %>
    Cheese:
    <%= f.text_field :cheese %>
    Sauce:
    <%= f.text_field :sauce %>
    Topping 1:
    <%= f.text_field :topping_one %>
    Topping 2:
    <%= f.text_field :topping_two %>
    Price:
    <%= f.number_field :price %>
    <%= f.submit :Create %>
<% end %>